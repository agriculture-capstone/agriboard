{
  "compilerOptions": {
    // We are compiling down with babel anyways
    "target": "es2015",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@root/*": ["./*"],
      "vue$": ["vue/dist/vue.esm.js"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
